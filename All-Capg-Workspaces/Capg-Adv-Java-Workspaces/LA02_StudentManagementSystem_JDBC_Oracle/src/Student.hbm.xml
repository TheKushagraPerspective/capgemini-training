<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.capg.layer.StudentBean" table="STUDENT2">

        <id name="studentId" column="STUDENT_ID" type="int">
            <generator class="assigned"/>
        </id>

        <property name="name" column="NAME" type="string" length="25"/>
        <property name="marks" column="MARKS" type="double"/>
        <property name="result" column="RESULT" type="string" length="25"/>

    </class>
</hibernate-mapping>
