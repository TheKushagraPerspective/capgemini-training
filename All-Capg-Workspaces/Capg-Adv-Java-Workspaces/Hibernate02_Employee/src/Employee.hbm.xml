<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.capg.hibernate.Employee" table="EMPLOYEE">

        <id name="empno" column="EMPNO" type="int">
            <generator class="assigned"/>
        </id>

        <property name="ename" column="ENAME" type="string" length="25"/>
        <property name="sal" column="SAL" type="double"/>
        <property name="hiredate" column="HIREDATE" type="date"/>
        <property name="deptno" column="DEPTNO" type="int"/>

    </class>
</hibernate-mapping>
